    <script>
    function add(n){
        lv.dataSource.allowCallbacks = false;
        for (i in 0...n) {
            lv.dataSource.add({text: 'Item ' + (lv.dataSource.size + 1)});
        }
        lv.dataSource.allowCallbacks = true;
        itemCount.text = "Item count: " + lv.dataSource.size;
    }
    
    </script>
    
    <label id="itemCount" />
    
    <hbox>
        <button text="invalidate" onclick="lv.invalidate()" />
        <button text="add" onclick="add(1) " />
        <button text="add 100" onclick="add(100) " />
        <button text="add 1000" onclick="add(1000) " />
        <button text="modify" onclick="lv.special = true; lv.dataSource.update(3, {text: 'edited'}); " />
        <button text="insert" onclick="lv.dataSource.insert(3, {text: 'inserted'}); " />
        <button text="remove" onclick="lv.dataSource.remove(lv.dataSource.get(3))" />
    </hbox>
