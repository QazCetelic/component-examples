<vbox style="padding: 5px;">
    <style>
        .checkbox2 {
            __background-color: red;
            spacing: 4px;
            width: auto;
            height: auto;
            cursor: pointer;
        }

        .checkbox2:hover {
            __color: #216AAE;
        }
        
        
        
.checkbox2-value {
    border: 1px solid #ABABAB;
    background-color: #FFFFFF;
    width: 16px;
    height: 16px;
    vertical-align: center;
    border-radius: 2px;
    icon: none;
    filter: drop-shadow(1, 45, #888888, 0.2, 2, 2, 1, 3, true);
}
        
.checkbox2-value:hover {
    border: 1px solid #216AAE;
}

.checkbox2-label {
    vertical-align: center;
}

.checkbox2-value:selected {
    icon: "haxeui-core/styles/default/check.png";
}

.checkbox2-icon {
    horizontal-align: center;
    vertical-align: center;
}











        .optionbox2 {
