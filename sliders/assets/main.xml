<vbox style="padding: 5px;">
    <grid columns="2">
        <hslider pos="50" round="true" onchange="value1.text = '' + this.pos" />
        <label id="value1" />
        
        <hslider min="5" max="10" pos="9" round="true" onchange="value2.text = '' + this.pos" />
        <label id="value2" />
        
        <hslider rangeStart="25" rangeEnd="75" round="true" onchange="value3.text = '' + this.rangeStart + ' - ' + this.rangeEnd" />
        <label id="value3" />
    </grid>    
    <grid columns="3">
        <label id="value4" />
        <label id="value5" />
        <label id="value6" />
        
        <vslider pos="50" round="true" onchange="value4.text = '' + this.pos" />
        <vslider min="5" max="10" pos="9" round="true" onchange="value5.text = '' + this.pos" />
        <vslider rangeStart="25" rangeEnd="75" round="true" onchange="value6.text = '' + this.rangeStart + ' - ' + this.rangeEnd" />
    </grid>    
</vbox>